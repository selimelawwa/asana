<div class="container my-5 pt-3">
  <div class = "row">
    <div class = "col-md-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'promos'}%>
    </div>
    <div class= "col-md-9">
      <div class="row">
        <div class="ml-4">
          <% if promo.new_record? %>
            <h1> New Promo Code </h1>
          <% else %>
            <h1> Edit "<%= promo.code %>" </h1>
          <% end %>
        </div>
      </div>
      <%= simple_form_for promo, url: (promo.new_record? ? promos_path : promo_path)  do |f| %>
  
        <div class="form-group">
          <%= f.input :code, class: 'form-control'  %>
          <%= f.hint 'Please DO NOT enter any spaces!'%>
        </div>
        <div class="form-group">
          <%= f.input :discount_rate, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.input :owner_name, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.input :description, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.input :active, class: 'form-control'  %>
        </div>
  
        <% submit_label = promo.new_record? ? "Add Promo" : "Update Promo"%>
        <div class="d-flex flex-row-reverse">
          <button class="btn color-semi-black btn-large align-right my-3 col-12 col-md-3 col-lg-2" type="submit" name="action"><%= submit_label%>
          </button>
        </div>

      <% end %>
    </div>
  </div>      
</div>