<div class="container mt-4">
  <div class="row justify-content-end">
    <% if policy(Slide).create? %>
    <h5><%= link_to 'Add a Slide', new_slide_path, class: "push-m9 text-dark" %></h5>
    <% end %>
  </div>
</div>
<div class="container mt-2 mb-5">
  <div class = "row">
    <div class= "col-md-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'slides'}%>
    </div>
    <div class = "col-md-9">
      <div class="col-sm-12 d-flex align-items-center justify-content-between">
        <h1 class="d-md-none d-lg-block entry-title"> All Slides </h1>
      </div>
      
      <div class="row">
        <% if @slides.any?%>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Main Image</th>
                  <th>Description</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @slides.each_with_index do |s,i| %>
                  <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= image_tag s.photo.url(:thumb) %></td>
                    <td><%= s.description&.truncate(50) %></td>
                    <td>
                      <%= link_to 'Edit slide', edit_slide_path(s) %>
                    </td>
                    <td>
                      <%= link_to 'Delete', slide_path(s), method: :delete, class: 'red',
                                data: { confirm: 'Are you sure you want to delet this Slide?' }   %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
