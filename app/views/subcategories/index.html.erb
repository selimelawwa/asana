<div class="container">
  <div class="row justify-content-between pl-4">
    <%= render partial: 'shared/sub_categories_breadcrum', locals: {category: @category, active_link: nil}%>
  </div>
</div>
<div class="container">
  <div class="row justify-content-end pr-3">
    <h5> <%= link_to 'Add A New Sub-Category', new_category_subcategory_path(category_id: @category.id) %> </h5>
  </div>
</div>
<div class="container mt-3 mb-5">
  <div class = "row">
    <div class= "col-md-4 col-lg-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'categories'}%>
    </div>
    <div class = "col-md-8 col-lg-9">
      <div class="col-sm-12 d-flex align-items-center justify-content-between">
        <h2> <%= "#{@category.name} Sub Categories"%> </h2>
      </div>
      <div class ="col-sm-9 categories-container">
        <% if @sub_categories.any? %>
          <ul class="list-group">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th> Name </th>
                    <th></th>
                  </tr>
                </thead>
                <tbody class="order_details">
                  <% @sub_categories.each_with_index do |s,i| %>
                    <tr>
                      <td scope="row"><%= i+1 %></td>
                      <td> <%= s.name %> </td>
                      <td class="text-right"> 
                        <%= link_to 'Edit', edit_category_subcategory_path(category_id: @category.id, id: s.id) %> 
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </ul>  
        <% end %>
      </div>
    </div>
  </div>
  <br><br>
</div>