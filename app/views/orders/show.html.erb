<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="row d-flex align-items-center">
        <% if @order.cart? %>
          <i class="fas fa-shopping-cart fa-2x mx-3 pb-1"></i>
          <h1> Cart </h1>
        <% else %>
          <h1> <%= "Order Number #{@order.id}" %> </h1>
        <% end %>
      </div>
      <div class="row">
        <% if @order.line_items.any?%>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Product Image</th>
                  <th scope="col">Product Name</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total Cost</th>
                </tr>
              </thead>
              <tbody class="order_details">
                <% @order.line_items.each_with_index do |l,i| %>
                  <tr>
                    <% variant = l.variant%>
                    <td scope="row"><%= i + 1 %></td>
                    <td><%= image_tag variant.main_photo.image.url(:thumb) %></td>
                    <td><%= "#{variant.product.name} - #{variant.options_text}" %></td>
                    <td><%= "EGP #{variant.product.price}" %></td>
                    <td><%= l.quantity%> </td>
                    <td> <%= l.total_cost%> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p>Your cart is empty, <%= link_to 'Continue Shopping', products_path %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>