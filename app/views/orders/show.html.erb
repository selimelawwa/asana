<div class="container my-5">
  <div class="row">
    <div class="row d-flex align-items-center">
      <% if @order.cart? %>
        <i class="fas fa-shopping-cart fa-2x mx-3 pb-1"></i>
        <h1> Cart </h1>
      <% else %>
        <h1> <%= "Order Number #{@order.id}" %> </h1>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% if @order.line_items.any?%>
      <div class="col-8">
        <div class="row" id="order_details_div">
          <%= render partial: 'order_details_partial', locals: {order: @order, line_items: @order.line_items}%>
        </div>
      </div>
      <div class="col-4">
        <h4> Order Summary</h4>
        <p> Total Amount:  <%= @order.current_total_cost%></p>
        <% if @order.cart? %>
          <%= link_to 'Check Out', order_select_address_path(order_id: @order.id) %>
        <% end %>
      </div>
    <% else %>
      <p>Your cart is empty, <%= link_to 'Continue Shopping', products_path %></p>
    <% end %>
  </div>
</div>