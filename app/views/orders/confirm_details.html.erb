<div class="container">
  <div class="row">
    <div class="row d-flex align-items-center">
      <h1> Order Details </h1>
    </div>
  </div>
  <div class="row">
    <% if @order.line_items.any?%>
      <div class="col-8">
        <div class="row">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th></th>
                  <th scope="col">Product Name</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total Cost</th>
                </tr>
              </thead>
              <tbody class="order_details">
                <% @order.line_items.each_with_index do |l,i| %>
                  <tr>
                    <% variant = l.variant%>
                    <td scope="row"><%= i %></td>
                    <td><%= image_tag variant.main_photo.image.url(:thumb) %></td>
                    <td><%= "#{variant.product.name} - #{variant.options_text}" %></td>
                    <td><%= "EGP #{variant.product.price}" %></td>
                    <td><%= l.quantity%> </td>
                    <td> <%= l.total_cost%> </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-4">
        <h4> Order Summary</h4>
        <p> Total Amount:  <%= @order.current_total_cost%></p>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12">
      <h1> Delivery Address </h1>
      <div class="table-responsive">
          <table class="table">
              <thead>
                <tr>
                <th></th>
                <th>Address</th>
                <th>City</th>
                <th>Mobile</th>
                <th>City</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @address.address&.truncate(50) %></td>
                  <td><%= @address.city %></td>
                  <td><%= @address.mobile %></td>
                  <td><%= @address.city %></td>
                </tr>
              </tbody>
          </table>
        </div> 
    </div>
  </div>
</div>