<div class = "row">
  <div class = "col-sm-12">
    <div class="col-sm-12 d-flex align-items-center justify-content-between">
        <h1> Available Sizes </h1>
        <h5> <%= link_to 'Add a new size', new_size_path %> </h5>
      </div>
    <div class ="offset-sm-1 col-sm-10 categories-container">
      <% @sizes.each do |s|%>
        <ul class="list-group">
          <li class="list-group-item"> <%= link_to s.name, edit_size_path(s.id) %> </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>