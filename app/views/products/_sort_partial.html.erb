<% if params.dig(:q,:s)&.eql? "created_at desc"%>
  <% select_sort_val = "Latest"%>
<% elsif params.dig(:q,:s)&.eql? "price desc"%>
  <% select_sort_val = "Price High to Low"%>
<% elsif params.dig(:q,:s)&.eql? "price asc"%>
  <% select_sort_val = "Price Low to High"%>
<% else%>
  <% select_sort_val = "Latest"%>
<% end %>
<%= select_tag(:sort_by, 
options_for_select([["Latest","Latest"], ["Price High to Low", "Price High to Low"],["Price Low to High", "Price Low to High"]],select_sort_val ),
class:"sort_select form-control pointer") %>
