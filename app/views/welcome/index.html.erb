<!-- Carousel Start -->

<!-- width: 960px, height: 500px -->

<% if @slides.any?%>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @slides.each_with_index do |s,i|%>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>" class="<%= 'active' if i==0%>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% @slides.each_with_index do |s,i|%>
        <div class="carousel-item <%= 'active' if i==0%> ">
          <%= image_tag s.photo.url, class: "carousel-img-size" %>
        </div>
      <% end %>
    </div>
    <% if @slides.count > 1%>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    <% end %>
  </div>
<% end %>

<!-- Carousel End -->


<!-- Jumbotron Start -->
<% if @jumbotron.presence && @category1_name.present? && @category2_name.present?%>
  <div class="container-fluid">
    <div class="row jumbotron mb-0">
      <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
          <!-- width: 720px, height:324px -->
          <%= image_tag @jumbotron.photo.url, :class => "img-fluid" %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 jumbotron-div">
        <p> <%= @jumbotron.description %> </p>
        <!-- Small screens only -->
        <div class="container-fluid">
          <div class="row justify-content-center">
            <div class="d-block d-sm-none w-100">
              <a href="<%= products_path(category_id: @jumbotron.category_id_1) %>"><button type="button" class="btn btn-outline-secondary btn-md" style="width:49%;"><%="Shop #{@category1_name}"%></button></a>
              <a href="<%= products_path(category_id: @jumbotron.category_id_2) %>"><button type="button" class="btn btn-outline-secondary btn-md" style="width:49%;"><%="Shop #{@category2_name}"%></button></a>
            </div>
          </div>
        </div>
        <!-- Medium screens only -->
        <div class="d-none d-md-block d-lg-none"> 
            <a href="<%= products_path(category_id: @jumbotron.category_id_1) %>"><button type="button" class="btn btn-outline-secondary btn-sm"><%="Shop #{@category1_name}"%></button></a>
            <a href="<%= products_path(category_id: @jumbotron.category_id_2) %>"><button type="button" class="btn btn-outline-secondary btn-sm"><%="Shop #{@category2_name}"%></button></a>
        </div>
        <!-- Large screens only -->
        <div class="d-md-none d-lg-block d-none d-sm-block">
            <a href="<%= products_path(category_id: @jumbotron.category_id_1) %>"><button type="button" class="btn btn-outline-secondary btn-lg"><%="Shop #{@category1_name}"%></button></a>
            <a href="<%= products_path(category_id: @jumbotron.category_id_2) %>"><button type="button" class="btn btn-outline-secondary btn-lg"><%="Shop #{@category2_name}"%></button></a>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Jumbotron End -->

<!-- New Arrivals Start -->

<!-- Visible on Desktop Computers -->
<% if @new_arrivals.any? %>

  <div class="d-none d-sm-block mt-4">
    <div class="row mr-4">
      <div class="col-md-4">
        <!-- width: 750px, height:530px -->
        <a href="#"><%= image_tag 'newarrivals.jpg', class: "img-fluid", id:"new-arr-img" %></a>
      </div>
      <% @new_arrivals.each do |n_p| %>
        <div class="col-md-2 pl-lg-5 pl-md-4">
          <div class="card shadow border-0 card-wid row">
            <div class="inner">
              <%= link_to image_tag(n_p.medium_photo, class: "card-img-top card-img-welcome"), product_path(n_p) %>
            </div>
            <div class="card-body card-font-welcome" style="max-height: 215px;">
              <h6 class="card-title cardtitle-font-welcome"><%= link_to n_p.name, product_path(n_p) %></h6>
              <p class="card-text"><small class="text-muted"><%= "EGP #{n_p.price}" %></small></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Visible on Mobile Phones -->
  <div class="d-block d-sm-none">
    <a href="#"><%= image_tag 'newarrivals.jpg', class: "img-fluid" %></a>
    <div class="container-fluid mt-2">
      <div class="row">
        <% @new_arrivals.each do |n_p| %>
          <div class="col-6">
            <div class="row px-1">
              <div class="card border-0">
                <div class="inner">
                  <%= link_to image_tag(n_p.medium_photo, class: "card-img-top"), product_path(n_p) %>
                </div>
                <div class="card-body">
                  <h6 class="card-title"><%= link_to n_p.name, product_path(n_p) %></h6>
                  <p class="card-text"><small class="text-muted"><%= "EGP #{n_p.price}" %></small></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
<% end %>
<!-- New Arrivals End -->


