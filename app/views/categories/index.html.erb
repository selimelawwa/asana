<div class="container mt-3">
  <div class="row justify-content-end pr-3">
    <h5> <%= link_to 'Add a New Category', new_category_path %> </h5>
  </div>
</div>
<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-md-4 col-lg-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'categories'}%>
    </div>
    <div class="col-md-8 col-lg-9">
      <div class="col-sm-12 d-flex align-items-center justify-content-between">
        <h1>Categories</h1>
      </div>
      <div class ="col-sm-9 categories-container">
        <% if @categories.any? %>
          <ul class="list-group">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th> Name </th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody class="order_details">
                  <% @categories.each_with_index do |c,i| %>
                    <tr>
                      <td scope="row"><%= i+1 %></td>
                      <td> <%= c.name %> </td>
                      <td class="text-right"> 
                        <%= link_to 'Edit', edit_category_path(id: c.id) %> 
                      </td>
                      <td class="text-right">
                        <%= link_to 'Sub Categories', category_subcategories_path(category_id: c.id)%> 
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </ul>  
        <% end %>
      </div>
    </div>
  </div>
  <br><br>
</div>