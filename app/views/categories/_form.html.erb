<div class = "container my-5">
  <div class = "row">
    <div class = "col-md-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'categories'}%>
    </div>
    <div class= "col-md-9">
      <% if category.id? %>
        <h1> Edit <%= category.name %> </h1>
      <% else %>
        <h1> New Category  </h1>
      <% end %>
      <%= simple_form_for category, url: (category.new_record? ? categories_path : category_path)  do |f| %>

        <div class="form-group">
          <%= f.label 'Category Name', :name %>
          <%= f.text_field :name, class: 'form-control'  %>
        </div>
        <%= f.input :kind, as: :hidden, input_html: { value: 'category' }%>
        <br><br>
        <div class="d-flex flex-row-reverse">
          <button class="btn btn-dark btn-large align-right" type="submit" name="action">Add Category</button>
        </div>
      <% end %>
    </div>
  </div>
</div>