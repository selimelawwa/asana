<div class = "container mb-5" style="margin-top: 4rem;">
  <div class = "row">
    <div class= "col-md-4 col-lg-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'jumbotrons'}%>
    </div>
    <div class= "col-md-8 col-lg-9">
      <% if jumbotron.new_record? %>
        <h1> New Jumbotron </h1>
      <% else %>
        <h1> Edit Jumbotron </h1>
      <% end %>
      <%= simple_form_for jumbotron, url: (jumbotron.new_record? ? jumbotrons_path : jumbotron_path)  do |f| %>

        <div class="custom-file mb-4 mt-3">
          <%= f.input :photo, as: :file, class: 'custom-file-input' %>
        </div>

        <div class="form-group mt-4">
          <%= f.input :description, label: 'Jumbotron Description', as: :text , 
                input_html: { id:"textarea1" , class: 'form-control' } %>
        </div>   

        <div class="form-group ">
          <%= f.input :category_id_1, collection: Category.category , label: 'Category 1', class: 'form-control' %>
        </div>

        <div class="form-group ">
          <%= f.input :category_id_2, collection: Category.category , label: 'Category 2', class: 'form-control' %>
        </div>
      
        <br>

        <% submit_label = jumbotron.new_record? ? "Add Jumbotron" : "Update Jumbotron"%>
        <div class="d-flex flex-row-reverse">
          <button class="btn color-semi-black btn-large align-right mt-4 mb-3 col-12 col-sm-3" type="submit" name="action"><%= submit_label%></button>
        </div>
      <% end %>
    </div>
  </div>
</div>