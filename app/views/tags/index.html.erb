<div class="container mt-3">
  <div class="row justify-content-end">
    <% if policy(Tag).create? && @tags.any?%>
      <h5> <%= link_to 'Create a new Tag', new_tag_path, class: "push-m9 text-dark" %> </h5> 
    <% end %>
  </div>
</div>
<div class="container mt-3 mb-5">
  <div class="row">
    <div class = "col-md-4 col-lg-3">
      <%= render partial: 'shared/admin_sidebar' , locals: {current: 'tags'}%>
    </div>
    <div class="col-md-8 col-lg-9">
      <div class="col-sm-12 d-flex align-items-center justify-content-between">
        <h1> Tags </h1>
      </div>
      <div class="row">
        <% if @tags.any?%>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th> Name </th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody class="order_details">
                <% @tags.each_with_index do |t,i| %>
                  <tr>
                    <td scope="row"><%= i+1 %></td>
                    <td> <%= t.name %> </td>
                    <td class="text-right"> 
                      <%= link_to 'Edit', edit_tag_path(id: t.id) %> 
                    </td>
                    <td class="text-right">
                      <%= link_to 'Delete', tag_path(id: t.id), class: 'red', method: :delete, 
                              data: { confirm: 'Are you sure?' }  %>
                    </td>
                    <td class="text-right">
                      <%= link_to 'Add products', tag_available_products_path(tag_id: t.id)%> 
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="col-12">
            <p>Your have no tags, <%= link_to 'Create a new tag', new_tag_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>